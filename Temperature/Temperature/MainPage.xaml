<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Temperature.MainPage">

    <ContentPage.Content>
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
             Command="{Binding RefreshCommand}">
        <ScrollView>
            <StackLayout>
                <CollectionView x:Name="collectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Grid Padding="10" RowDefinitions="auto, *" ColumnDefinitions="auto, *">
                                    <Label Grid.Row="0" Grid.Column="0" Text="Temperature(°C):" TextColor="Red" FontSize="Medium"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="Humidity (%):" TextColor="Blue" FontSize="Medium"/>
                                    <Label Grid.Row="2" Grid.Column="0" Text="Time :" TextColor="Green" FontSize="Medium"/>
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Temperature}" TextColor="Black" Margin="25, 0, 0, 0" FontSize="Medium"/>
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Humidity}" TextColor="Black" Margin="25, 0, 0, 0" FontSize="Medium"/>
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Timestamp1}" TextColor="Black" Margin="25, 0, 0, 0" FontSize="Medium"/>
                                </Grid>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>


